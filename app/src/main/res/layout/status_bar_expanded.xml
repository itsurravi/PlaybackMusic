<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notificationbg"
    android:layout_width="fill_parent"
    android:layout_height="128.0dip"
    android:background="@color/notificationBackground">

    <ImageView
        android:id="@+id/status_bar_ex_album_art"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/status_bar_ex_album_art"
        android:divider="?android:listDivider"
        android:dividerPadding="12.0dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:showDividers="middle">

        <ImageView
            android:id="@+id/status_bar_ex_prev"
            android:layout_width="0.0dip"
            android:layout_height="48dip"
            android:layout_weight="1.0"
            android:background="?android:selectableItemBackground"
            android:padding="10.0dip"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_skip_previous_white_24dp" />

        <ImageView
            android:id="@+id/status_bar_ex_play"
            android:layout_width="0.0dip"
            android:layout_height="48dip"
            android:layout_weight="1.0"
            android:background="?android:selectableItemBackground"
            android:padding="10.0dip"
            android:scaleType="fitCenter"
            android:src="@drawable/uamp_ic_play_arrow_white_24dp" />

        <ImageView
            android:id="@+id/status_bar_ex_next"
            android:layout_width="0.0dip"
            android:layout_height="48dip"
            android:layout_weight="1.0"
            android:background="?android:selectableItemBackground"
            android:padding="10.0dip"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_skip_next_white_24dp" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_above="@+id/buttons"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/status_bar_ex_album_art"
        android:background="?android:dividerHorizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/status_bar_ex_album_art"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/textarea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/status_bar_ex_track_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_margin="3dp"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:focusable="true"
                android:singleLine="true"
                android:textColor="#fff"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/status_bar_ex_artist_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_margin="2dp"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:singleLine="true"
                android:textColor="#fff"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>