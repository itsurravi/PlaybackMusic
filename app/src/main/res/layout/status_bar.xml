<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/notificationBackground"
    android:gravity="center"
    android:orientation="horizontal"
    android:weightSum="100">

    <ImageView
        android:id="@+id/status_bar_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="#000"
        android:scaleType="center"
        android:src="@mipmap/ic_launcher"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/status_bar_albumart"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:gravity="center"
        android:padding="2dp"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_weight="40"
        android:orientation="vertical"
        android:paddingStart="2dp"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/status_bar_track_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="#fff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/status_bar_artist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="#fff"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="60"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/status_bar_fav"
            android:layout_width="0.0dip"
            android:layout_height="35dip"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_weight="15"
            android:background="?android:selectableItemBackground"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_fav_not" />

        <ImageButton
            android:id="@+id/status_bar_play"
            android:layout_width="0.0dip"
            android:layout_height="48dip"
            android:layout_weight="15"
            android:background="?android:selectableItemBackground"
            android:scaleType="fitCenter"
            android:src="@drawable/uamp_ic_play_arrow_white_24dp" />

        <ImageButton
            android:id="@+id/status_bar_next"
            android:layout_width="0.0dip"
            android:layout_height="48dip"
            android:layout_marginLeft="10dp"
            android:layout_weight="15"
            android:background="?android:selectableItemBackground"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_skip_next_white_24dp" />

    </LinearLayout>

</LinearLayout>