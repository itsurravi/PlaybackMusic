<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
        <item name="popupMenuBackground">@color/popupItemBackground</item>
        <item name="android:colorControlHighlight">@color/ripple_dark</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:navigationBarColor">@color/notificationBackground</item>
    </style>

    <style name="AlertDialogCustom" parent="@style/Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@color/popupItemBackground</item>
        <item name="colorAccent">@color/scrollThumb</item>
    </style>

    <style name="SearchTheme" parent="AppTheme">
        <item name="colorPrimaryDark">@color/contentBGclr</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TransparentBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:navigationBarColor">@color/notificationBackground</item>
    </style>

    <style name="DialogAnimation_2">
        <item name="android:windowEnterAnimation">@anim/slide_up_alert</item>
        <item name="android:windowExitAnimation">@anim/slide_down_alert</item>
    </style>

    <style name="CustomSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/scrollThumb</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:colorForeground">@color/white</item>
    </style>

    <style name="Theme.UserDialog" parent="Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
    </style>

</resources>
