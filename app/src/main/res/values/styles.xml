<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
        <item name="popupMenuBackground">@color/popupItemBackground</item>
        <item name="android:colorControlHighlight">@color/ripple_dark</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
    </style>

    <style name="AlertDialogCustom" parent="@style/ThemeOverlay.Material3.Dialog.Alert">
        <item name="android:windowBackground">@color/popupItemBackground</item>
        <item name="colorAccent">@color/scrollThumb</item>
    </style>

    <style name="SearchTheme" parent="AppTheme">
        <item name="colorPrimaryDark">@color/contentBGclr</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DialogAnimation_2">
        <item name="android:windowEnterAnimation">@anim/slide_up_alert</item>
        <item name="android:windowExitAnimation">@anim/slide_down_alert</item>
    </style>

    <style name="CustomSwitch" parent="Theme.Material3.Light">
        <item name="colorControlActivated">@color/scrollThumb</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:colorForeground">@color/white</item>
    </style>

    <style name="Theme.UserDialog" parent="Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyBottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconSize">20dp</item>
        <item name="itemPaddingTop">6dp</item>
        <item name="itemPaddingBottom">10dp</item>
        <item name="android:minHeight">60dp</item>
    </style>

    <style name="BottomNavigationIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/contentBGclr</item>
        <item name="android:height">28dp</item>
        <item name="android:width">48dp</item>
    </style>

</resources>
